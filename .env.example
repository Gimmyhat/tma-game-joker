# Environment
NODE_ENV=development
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Redis
REDIS_URL=redis://localhost:6379

# PostgreSQL
DATABASE_URL=postgresql://joker:joker_secret@localhost:5432/joker_db
POSTGRES_USER=joker
POSTGRES_PASSWORD=joker_secret
POSTGRES_DB=joker_db

# Telegram Bot (for auth validation)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Mini App URL (ngrok for dev, domain for prod)
# For development with ngrok: WEBAPP_URL=https://abc123.ngrok.io
WEBAPP_URL=https://your-domain.com

# Game settings (optional overrides)
TURN_TIMEOUT_MS=30000
RECONNECT_TIMEOUT_MS=30000
MATCHMAKING_TIMEOUT_MS=60000
