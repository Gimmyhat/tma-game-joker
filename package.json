{
  "name": "tma-joker-game",
  "version": "0.1.0",
  "private": true,
  "description": "Telegram Mini App - Joker Card Game",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:backend": "pnpm --filter @joker/backend dev",
    "dev:frontend": "pnpm --filter @joker/frontend dev",
    "dev:admin": "pnpm --filter @joker/admin dev",
    "build": "pnpm run --parallel build",
    "build:backend": "pnpm --filter @joker/backend build",
    "build:frontend": "pnpm --filter @joker/frontend build",
    "build:admin": "pnpm --filter @joker/admin build",
    "test": "pnpm run --parallel test",
    "test:backend": "pnpm --filter @joker/backend test",
    "lint": "pnpm run --parallel lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "pnpm run --parallel clean && rimraf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "socket.io-client": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "@tiptap/core": "2.1.13",
      "@tiptap/pm": "2.1.13",
      "@tiptap/extension-bold": "2.1.13",
      "@tiptap/extension-italic": "2.1.13",
      "@tiptap/extension-strike": "2.1.13",
      "@tiptap/extension-history": "2.1.13",
      "@tiptap/extension-gapcursor": "2.1.13",
      "@tiptap/extension-list-item": "2.1.13",
      "@tiptap/extension-paragraph": "2.1.13",
      "@tiptap/extension-blockquote": "2.1.13",
      "@tiptap/extension-code-block": "2.1.13",
      "@tiptap/extension-dropcursor": "2.1.13",
      "@tiptap/extension-hard-break": "2.1.13",
      "@tiptap/extension-bullet-list": "2.1.13",
      "@tiptap/extension-ordered-list": "2.1.13",
      "@tiptap/extension-horizontal-rule": "2.1.13"
    }
  }
}
